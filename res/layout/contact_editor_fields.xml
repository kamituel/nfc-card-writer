<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/pl.kamituel.nfcbusinesscardwriter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <pl.kamituel.nfcbusinesscardwriter.ui.TypefacedTextView
            style="@style/InputHeading"
            android:layout_width="@dimen/heading_width"
            android:layout_height="wrap_content"
            android:text="ImiÄ™ i nazwisko" />

        <AutoCompleteTextView
            android:id="@+id/nameEditText"
            style="@style/Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/name" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <pl.kamituel.nfcbusinesscardwriter.ui.TypefacedTextView
            android:id="@+id/phoneHeading"
            style="@style/InputHeading"
            android:layout_width="@dimen/heading_width"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Telefon" />

        <pl.kamituel.nfcbusinesscardwriter.ui.LinearLayoutList
            android:id="@+id/phoneList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/phoneHeading"
            android:orientation="vertical" >
        </pl.kamituel.nfcbusinesscardwriter.ui.LinearLayoutList>

        <Button
            android:id="@+id/addAnotherPhone"
            style="@style/AddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/phoneHeading"
            android:layout_margin="0dp"
            android:text="@string/add" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <pl.kamituel.nfcbusinesscardwriter.ui.TypefacedTextView
            android:id="@+id/emailHeading"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            style="@style/InputHeading"
            android:layout_width="@dimen/heading_width"
            android:layout_height="wrap_content"
            android:text="Email" />

        <pl.kamituel.nfcbusinesscardwriter.ui.LinearLayoutList
            android:id="@+id/emailList"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/emailHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </pl.kamituel.nfcbusinesscardwriter.ui.LinearLayoutList>

        <Button
            android:id="@+id/addAnotherEmail"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/emailHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add" />
    </RelativeLayout>

</LinearLayout>