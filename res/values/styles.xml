<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res/pl.kamituel.nfcbusinesscardwriter.ui.TypefacedTextView">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="InputHeading">
        <item name="typeface">RobotoCondensed-Bold.ttf</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="Input">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AddButton">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:height">15dp</item>
        <!-- <item name="android:background">#00FFFFFF</item> -->
    </style>
</resources>
